@model EmployeesApp.Models.Employee
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EmployeeApp</title>

    <link href="~/css/CreateEditEmployee.css" rel="stylesheet" />
</head>
<body>
    <div class="emp-header">
        @if (@ViewBag.Id == null)
        {
            <h2>Create Employee</h2>
        } else
        {
            <h2>Edit Employee</h2>
        }
    </div>
    <div class="row">
        <div class="col-4 avatar-sec">
            <div class="image-sec">
                <img class="rounded-circle avatar-img" src="~/img/avatar.jpg" alt="Avatar">
            </div>
            <div class="button-sec">
                <button type="button" class="btn btn-primary avatar-btn">Select avatar</button>
            </div>
        </div>
                
        <div class="col-8">
            @if (@ViewBag.Id == null)
            {
                <form method="post" asp-action="Create" asp-controller="Employee" class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input required type="text" asp-for="Name" class="form-control">
                </div>

                <div class="col-md-6">
                    <label asp-for="Age" class="form-label">Age</label>
                    <input required type="number" min="1" asp-for="Age" class="form-control">
                </div>

                <div class="col-md-6">
                    <label asp-for="Speciality" class="form-label">Speciality</label>
                    <input required type="text" asp-for="Speciality" class="form-control">
                </div>

                <div class="col-md-6">
                    <label asp-for="EmployementDate" class="form-label">Employement Date</label>
                    <input required type="date" asp-for="EmployementDate" class="form-control">
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>

                <div class="col-md-2">
                    <a asp-action="EmployeeList" type="button" class="btn btn-outline-primary">Cancel</a>
                </div>
            </form>
            } else
            {
                <form method="post" asp-action="Edit" asp-controller="Employee" asp-route-id="@ViewBag.Id" class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input id="inputName" required type="text" asp-for="Name" class="form-control">
                </div>

                <div class="col-md-6">
                    <label asp-for="Age" class="form-label">Age</label>
                    <input id="inputAge" required type="number" min="1" asp-for="Age" class="form-control">
                </div>

                <div class="col-md-6">
                    <label asp-for="Speciality" class="form-label">Speciality</label>
                    <input id="inputSpeciality" required type="text" asp-for="Speciality" class="form-control">
                </div>

                <div class="col-md-6">
                    <label asp-for="EmployementDate" class="form-label">Employement Date</label>
                    <input id="inputEmployementDate" required type="date" asp-for="EmployementDate" class="form-control">
                </div>

                <div class="col-md-2">
                    <button id="btnUpdate" type="submit" class="btn btn-primary">Update</button>
                </div>

                <div class="col-md-2">
                    <a asp-action="EmployeeList" type="button" class="btn btn-outline-primary">Cancel</a>
                </div>
            </form>
            }
            
        </div>
    </div>
     
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/js/employeeEdit.js"></script>
</html>
