    <body>
        <div class="emp-header">
            <h2>Employees List</h2>
        </div>
                
        <div class="wrapper">
            <form asp-action="EmployeeFilteredList" asp-controller="Employee" class="row">
                <div class="col-4">
                    <input type="text" class="form-control" placeholder="Search" aria-label="Search" name="SearchString">
                </div>
                <div class="col-2">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
                <div class="col-2">
                    <a asp-action="EmployeeList" method="post" class="btn btn-primary" type="button">Clear Filter</a>
                </div>
                <div class="col-4">
                    <a class="btn btn-primary create-btn" type="button" asp-action="Create" asp-controller="Employee">Create Employee</a>
                </div>
            </form>
        </div>

