@model EmployeesApp.Web.Models.UserAuthModel;
<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>EmployeeApp</title>

        <link href="~/css/Login.css" rel="stylesheet" />
    </head>
    <body>
        <div class="emp-header">
            <h2>Login</h2>
        </div>
        <div class="row">    
            <div class="col-4">
                <form class="row g-3 form">

                    <div id="alertError" class="col-md-12 alert alert-danger" style="display: none" role="alert">
                        Invalid username or password
                    </div>

                    <div class="col-md-12">
                        <label for="inputLogin" class="form-label">Login</label>
                        <input required asp-for="UserName" type="text" class="form-control" id="inputLogin">
                    </div>

                    <div class="col-md-12">
                        <label for="inputPassword" class="form-label">Password</label>
                        <input required asp-for="Password" type="password" class="form-control" id="inputPassword">
                    </div>

                    <div class="col-6">
                        <button onclick="login(UserName.value, Password.value)" type="button" class="btn btn-primary">Login</button>
                    </div>

                    <div class="col-6">
                        <a href="/Register" class="btn btn-outline-primary">Register</a>
                    </div>
                </form>
            </div>
        </div>
    </body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/login.js"></script>
</html>
